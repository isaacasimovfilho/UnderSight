# SIEM Environment Configuration
# Copy to .env and configure

# PostgreSQL
POSTGRES_USER=siem
POSTGRES_PASSWORD=siem_secure_password_change_me
POSTGRES_DB=siem_platform
DATABASE_URL=postgresql://siem:siem_secure_password_change_me@postgres:5432/siem_platform

# OpenSearch
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_URL=http://opensearch:9200

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_RAW_EVENTS=siem-raw-events
KAFKA_TOPIC_NORMALIZED=siem-normalized
KAFKA_TOPIC_ALERTS=siem-alerts

# Redis
REDIS_URL=redis://redis:6379

# Application
SIEM_ENV=development
SIEM_SECRET_KEY=change-this-in-production-min-32-chars
LOG_LEVEL=info

# Frontend
VITE_API_URL=http://localhost:8000/api/v1
